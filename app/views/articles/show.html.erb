<div class="article">
  <div class="flex">
    <h2><%= @article.title %></h2>
    <%= link_to edit_article_path do %>
      <i class="fa-solid fa-pen"></i>
    <% end %>
    <%= link_to article_path, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
      <i class="fa-solid fa-trash"></i>
    <% end %>
  </div>
  <p><%= @article.content %></p>
</div>
<div class="text-right">
  <%= link_to "< Back to the articles", articles_path %>
</div>
